{{#if products}}
  {{#each products}}
    <div class="card w-25 text-center m-1 shadow">
      <h3>{{this.name}}</h3>
      <p>price: ${{this.price}}</p>
      <img src={{this.picture}} alt="" />
      <button class="addProductToCartBtn btn btn-primary">Agregar producto al
        carrito
      </button>
    </div>
  {{/each}}
{{else}}
  <h2>Theres no products</h2>
{{/if}}